<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.5" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

    <filter>
        <filter-name>UrlRewriteFilter</filter-name>
        <filter-class>org.tuckey.web.filters.urlrewrite.UrlRewriteFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>UrlRewriteFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>

    <filter>
        <filter-name>HtmlInjectFilter</filter-name>
        <filter-class>net.gnehzr.tnoodle.server.HtmlInjectFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>HtmlInjectFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>


    <mime-mapping>
        <extension>svg</extension>
        <mime-type>image/svg+xml</mime-type>
    </mime-mapping>

    <mime-mapping>
        <extension>ico</extension>
        <mime-type>image/x-icon</mime-type>
    </mime-mapping>

    <mime-mapping>
        <extension>ttf</extension>
        <mime-type>application/x-font-ttf</mime-type>
    </mime-mapping>


    <servlet>
        <servlet-name>DeathServlet</servlet-name>
        <servlet-class>net.gnehzr.tnoodle.server.DeathServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeathServlet</servlet-name>
        <url-pattern>/kill/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MarkdownServlet</servlet-name>
        <servlet-class>net.gnehzr.tnoodle.server.MarkdownServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MarkdownServlet</servlet-name>
        <url-pattern>*.md</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>JsEnvServlet</servlet-name>
        <servlet-class>net.gnehzr.tnoodle.server.JsEnvServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>JsEnvServlet</servlet-name>
        <url-pattern>/env.js</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>JsEnvServlet</servlet-name>
        <url-pattern>/env.json</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>VersionServlet</servlet-name>
        <servlet-class>net.gnehzr.tnoodle.server.VersionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VersionServlet</servlet-name>
        <url-pattern>/version.json</url-pattern>
    </servlet-mapping>



    <display-name>webscrambles</display-name>

    <servlet>
        <servlet-name>ScrambleReadmeHandler</servlet-name>
        <servlet-class>net.gnehzr.tnoodle.server.webscrambles.ScrambleReadmeHandler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ScrambleReadmeHandler</servlet-name>
        <url-pattern>/readme/scramble</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PuzzleListHandler</servlet-name>
        <servlet-class>net.gnehzr.tnoodle.server.webscrambles.PuzzleListHandler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PuzzleListHandler</servlet-name>
        <url-pattern>/puzzles/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ScrambleHandler</servlet-name>
        <servlet-class>net.gnehzr.tnoodle.server.webscrambles.ScrambleHandler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ScrambleHandler</servlet-name>
        <url-pattern>/scramble/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ScrambleImporterHandler</servlet-name>
        <servlet-class>net.gnehzr.tnoodle.server.webscrambles.ScrambleImporterHandler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ScrambleImporterHandler</servlet-name>
        <url-pattern>/import/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ScrambleViewHandler</servlet-name>
        <servlet-class>net.gnehzr.tnoodle.server.webscrambles.ScrambleViewHandler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ScrambleViewHandler</servlet-name>
        <url-pattern>/view/*</url-pattern>
    </servlet-mapping>

</web-app>
